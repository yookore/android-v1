<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yookos.mobileapp" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--
 The following two permissions are not required to use
 Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PreLoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="@string/title_signin" />
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_signup" />
        <activity
            android:name=".VerificationActivity"
            android:label="@string/title_activity_verification" >
        </activity>
        <activity
            android:name=".StreamActivity"
            android:label="@string/title_activity_stream" >
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_stream" >
        </activity>
        <activity
            android:name=".HobbiesandInterests"
            android:label="@string/title_activity_hobbiesand_interests" >
        </activity>
        <activity
            android:name=".CurrentcityActivity"
            android:label="@string/title_activity_currentcity" >
        </activity>
        <activity
            android:name=".HomeCountryActivity"
            android:label="@string/title_activity_home_country" >
        </activity>
        <activity
            android:name=".HometownActivity"
            android:label="@string/title_activity_hometown" >
        </activity>
        <activity
            android:name=".UploadProfilePhotoActivity"
            android:label="@string/title_activity_upload_profile_photo" >
        </activity>
        <activity
            android:name=".RecommendFriends"
            android:label="@string/title_activity_recommend_friends" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:label="@string/title_activity_edit_profile" >
        </activity>
    </application>

</manifest>
